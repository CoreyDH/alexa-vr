<h1>Register</h1>
{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
  {{/each}}
{{/if}}
<form action="/account/register" method="post">
  <div class="form-group">
    <label for="email">E-mail:</label><input type="text" id="email" name="email" value="" placeholder="Enter your email here.">
  </div>
  <div class="form-group">
    <label for="password">Password:</label><input id="password" type="password" name="password" value="">
  </div>
  <div class="form-group">
    <label for="password2">Confirm Password:</label><input id="password2" type="password" name="password2" value="">
  </div>
  <button type="submit" class="btn btn-success">Submit</button>
</form>